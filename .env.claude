# Claude Code Maximum Performance Configuration
# Generated for maximum power and performance

# ==== OUTPUT TOKEN LIMITS (Maximum Values) ====
CLAUDE_CODE_MAX_OUTPUT_TOKENS=4096000
MAX_MCP_OUTPUT_TOKENS=100000
MAX_THINKING_TOKENS=60000

# ==== BASH TIMEOUT SETTINGS (Maximum Values) ====
BASH_DEFAULT_TIMEOUT_MS=3600000
BASH_MAX_TIMEOUT_MS=3600000
BASH_MAX_OUTPUT_LENGTH=1000000

# ==== MCP SERVER SETTINGS (Maximum Performance) ====
MCP_TIMEOUT=300000
MCP_TOOL_TIMEOUT=600000

# ==== MODEL OPTIMIZATION ====
# Use Sonnet 4 for maximum capability
CLAUDE_CODE_SUBAGENT_MODEL=claude-3-5-sonnet-20241022
CLAUDE_CODE_HAIKU_MODEL=claude-3-haiku-20240307
CLAUDE_CODE_SONNET_MODEL=claude-3-5-sonnet-20241022

# ==== PERFORMANCE OPTIMIZATIONS ====
# Keep essential model calls enabled for better quality
DISABLE_NON_ESSENTIAL_MODEL_CALLS=false

# ==== MEMORY AND CONTEXT LIMITS ====
# Allow maximum context usage
CLAUDE_CODE_MAX_CONTEXT_SIZE=8192000
CLAUDE_CODE_MEMORY_BUDGET=unlimited

# ==== CONCURRENT OPERATIONS ====
# Maximum parallel processing
CLAUDE_CODE_MAX_CONCURRENT_TOOLS=15
CLAUDE_CODE_PARALLEL_LIMIT=10

# ==== ADVANCED FEATURES ====
# Enable all advanced capabilities
CLAUDE_CODE_ENABLE_ADVANCED_REASONING=true
CLAUDE_CODE_ENABLE_DEEP_ANALYSIS=true
CLAUDE_CODE_ENABLE_PARALLEL_THINKING=true
CLAUDE_CODE_ENABLE_MCP_OPTIMIZATION=true

# ==== DEVELOPMENT MODE ====
# Maximum verbosity for debugging
CLAUDE_CODE_DEBUG_MODE=true
CLAUDE_CODE_VERBOSE=true
CLAUDE_CODE_LOG_LEVEL=debug

# ==== NETWORK SETTINGS ====
# Maximum timeouts for web operations
CLAUDE_CODE_WEB_TIMEOUT=300000
CLAUDE_CODE_NETWORK_RETRY_COUNT=5

# ==== RESOURCE ALLOCATION ====
# Maximum resource usage
CLAUDE_CODE_CPU_INTENSIVE=true
CLAUDE_CODE_MEMORY_INTENSIVE=true
CLAUDE_CODE_IO_INTENSIVE=true